import React, { useState, useMemo } from 'react';
import { BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer, LineChart, Line } from 'recharts';
import { TrendingUp, TrendingDown, Minus, Users, ShoppingCart, AlertCircle } from 'lucide-react';

const ABTestAnalyzer = () => {
  const [config, setConfig] = useState({
    nUsers: 40000,
    primeShare: 0.42,
    atcPrime: 0.125,
    atcNonprime: 0.085,
    checkoutGivenAtcPrime: 0.55,
    checkoutGivenAtcNonprime: 0.50,
    bouncePrime: 0.36,
    bounceNonprime: 0.44,
    atcPrimeMult: 1.05,
    atcNonprimeMult: 0.98,
    bouncePrimeDelta: 0.00,
    bounceNonprimeDelta: 0.01
  });

  // Simulation function
  const simulateData = useMemo(() => {
    const seed = 7;
    let random = seed;
    const lcg = () => {
      random = (random * 1664525 + 1013904223) % 4294967296;
      return random / 4294967296;
    };

    const n = config.nUsers;
    const results = {
      overall: { A: {}, B: {} },
      prime: { A: {}, B: {} },
      nonprime: { A: {}, B: {} }
    };

    let counts = {
      A: { total: 0, prime: 0, nonprime: 0, atc: 0, atcPrime: 0, atcNonprime: 0, 
           bounce: 0, bouncePrime: 0, bounceNonprime: 0, checkout: 0 },
      B: { total: 0, prime: 0, nonprime: 0, atc: 0, atcPrime: 0, atcNonprime: 0,
           bounce: 0, bouncePrime: 0, bounceNonprime: 0, checkout: 0 }
    };

    for (let i = 0; i < n; i++) {
      const variant = lcg() < 0.5 ? 'A' : 'B';
      const isPrime = lcg() < config.primeShare;
      
      counts[variant].total++;
      if (isPrime) counts[variant].prime++;
      else counts[variant].nonprime++;

      // Bounce rate
      const bounceProb = isPrime 
        ? config.bouncePrime + (variant === 'B' ? config.bouncePrimeDelta : 0)
        : config.bounceNonprime + (variant === 'B' ? config.bounceNonprimeDelta : 0);
      const bounced = lcg() < bounceProb;
      
      if (bounced) {
        counts[variant].bounce++;
        if (isPrime) counts[variant].bouncePrime++;
        else counts[variant].bounceNonprime++;
      }

      // ATC (only if not bounced)
      if (!bounced) {
        const atcBase = isPrime ? config.atcPrime : config.atcNonprime;
        const atcMult = variant === 'B' 
          ? (isPrime ? config.atcPrimeMult : config.atcNonprimeMult)
          : 1;
        const atcProb = Math.min(atcBase * atcMult, 1);
        
        if (lcg() < atcProb) {
          counts[variant].atc++;
          if (isPrime) counts[variant].atcPrime++;
          else counts[variant].atcNonprime++;

          // Checkout
          const checkoutProb = isPrime ? config.checkoutGivenAtcPrime : config.checkoutGivenAtcNonprime;
          if (lcg() < checkoutProb) {
            counts[variant].checkout++;
          }
        }
      }
    }

    // Calculate rates
    const calcMetrics = (variant) => ({
      atcRate: counts[variant].atc / counts[variant].total,
      atcPrimeRate: counts[variant].atcPrime / counts[variant].prime,
      atcNonprimeRate: counts[variant].atcNonprime / counts[variant].nonprime,
      bounceRate: counts[variant].bounce / counts[variant].total,
      bouncePrimeRate: counts[variant].bouncePrime / counts[variant].prime,
      bounceNonprimeRate: counts[variant].bounceNonprime / counts[variant].nonprime,
      checkoutRate: counts[variant].checkout / counts[variant].total,
      n: counts[variant].total,
      nPrime: counts[variant].prime,
      nNonprime: counts[variant].nonprime
    });

    return { A: calcMetrics('A'), B: calcMetrics('B') };
  }, [config]);

  // Calculate confidence intervals
  const calcCI = (p1, n1, p2, n2) => {
    const se = Math.sqrt((p1 * (1 - p1) / n1) + (p2 * (1 - p2) / n2));
    const diff = p2 - p1;
    return {
      diff,
      relLift: p1 > 0 ? diff / p1 : 0,
      ciLow: diff - 1.96 * se,
      ciHigh: diff + 1.96 * se,
      significant: (diff - 1.96 * se > 0) || (diff + 1.96 * se < 0)
    };
  };

  const metrics = {
    atcOverall: calcCI(simulateData.A.atcRate, simulateData.A.n, simulateData.B.atcRate, simulateData.B.n),
    atcPrime: calcCI(simulateData.A.atcPrimeRate, simulateData.A.nPrime, simulateData.B.atcPrimeRate, simulateData.B.nPrime),
    atcNonprime: calcCI(simulateData.A.atcNonprimeRate, simulateData.A.nNonprime, simulateData.B.atcNonprimeRate, simulateData.B.nNonprime),
    bounceOverall: calcCI(simulateData.A.bounceRate, simulateData.A.n, simulateData.B.bounceRate, simulateData.B.n),
    bounceNonprime: calcCI(simulateData.A.bounceNonprimeRate, simulateData.A.nNonprime, simulateData.B.bounceNonprimeRate, simulateData.B.nNonprime),
    checkoutOverall: calcCI(simulateData.A.checkoutRate, simulateData.A.n, simulateData.B.checkoutRate, simulateData.B.n)
  };

  const MetricCard = ({ title, metric, rateA, rateB, inverse = false, icon: Icon }) => {
    const isPositive = inverse ? metric.diff < 0 : metric.diff > 0;
    const TrendIcon = isPositive ? TrendingUp : (metric.diff === 0 ? Minus : TrendingDown);
    const color = metric.significant 
      ? (isPositive ? 'text-green-600' : 'text-red-600')
      : 'text-gray-500';

    return (
      <div className="bg-white p-4 rounded-lg shadow border">
        <div className="flex items-center justify-between mb-2">
          <h3 className="font-semibold text-gray-700 flex items-center gap-2">
            {Icon && <Icon size={18} />}
            {title}
          </h3>
          <TrendIcon className={color} size={20} />
        </div>
        <div className="grid grid-cols-2 gap-4 text-sm mb-3">
          <div>
            <div className="text-gray-500">Control (A)</div>
            <div className="text-lg font-bold">{(rateA * 100).toFixed(2)}%</div>
          </div>
          <div>
            <div className="text-gray-500">Treatment (B)</div>
            <div className="text-lg font-bold">{(rateB * 100).toFixed(2)}%</div>
          </div>
        </div>
        <div className={`text-sm ${color} font-medium`}>
          Absolute: {metric.diff >= 0 ? '+' : ''}{(metric.diff * 100).toFixed(2)}pp
        </div>
        <div className={`text-sm ${color} font-medium`}>
          Relative: {metric.relLift >= 0 ? '+' : ''}{(metric.relLift * 100).toFixed(2)}%
        </div>
        <div className="text-xs text-gray-500 mt-1">
          95% CI: [{(metric.ciLow * 100).toFixed(2)}pp, {(metric.ciHigh * 100).toFixed(2)}pp]
          {metric.significant && <span className="ml-2 font-semibold">*</span>}
        </div>
      </div>
    );
  };

  const chartData = [
    {
      name: 'Overall',
      'Control ATC': simulateData.A.atcRate * 100,
      'Treatment ATC': simulateData.B.atcRate * 100
    },
    {
      name: 'Prime',
      'Control ATC': simulateData.A.atcPrimeRate * 100,
      'Treatment ATC': simulateData.B.atcPrimeRate * 100
    },
    {
      name: 'Non-Prime',
      'Control ATC': simulateData.A.atcNonprimeRate * 100,
      'Treatment ATC': simulateData.B.atcNonprimeRate * 100
    }
  ];

  return (
    <div className="min-h-screen bg-gray-50 p-6">
      <div className="max-w-7xl mx-auto">
        <div className="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-6 rounded-lg shadow-lg mb-6">
          <h1 className="text-3xl font-bold mb-2">A/B Test: Prime Overnight Delivery</h1>
          <p className="text-blue-100">
            Simulated experiment comparing standard delivery messaging (Control A) vs. 
            Prime Overnight emphasis (Treatment B)
          </p>
        </div>

        {/* Configuration Panel */}
        <div className="bg-white p-6 rounded-lg shadow mb-6">
          <h2 className="text-xl font-bold mb-4">Experiment Configuration</h2>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Sample Size
              </label>
              <input
                type="number"
                value={config.nUsers}
                onChange={(e) => setConfig({...config, nUsers: parseInt(e.target.value)})}
                className="w-full px-3 py-2 border rounded"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Prime Share (%)
              </label>
              <input
                type="number"
                step="0.01"
                value={config.primeShare * 100}
                onChange={(e) => setConfig({...config, primeShare: parseFloat(e.target.value) / 100})}
                className="w-full px-3 py-2 border rounded"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Prime ATC Baseline (%)
              </label>
              <input
                type="number"
                step="0.1"
                value={config.atcPrime * 100}
                onChange={(e) => setConfig({...config, atcPrime: parseFloat(e.target.value) / 100})}
                className="w-full px-3 py-2 border rounded"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Non-Prime ATC Baseline (%)
              </label>
              <input
                type="number"
                step="0.1"
                value={config.atcNonprime * 100}
                onChange={(e) => setConfig({...config, atcNonprime: parseFloat(e.target.value) / 100})}
                className="w-full px-3 py-2 border rounded"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Prime ATC Treatment Effect (multiplier)
              </label>
              <input
                type="number"
                step="0.01"
                value={config.atcPrimeMult}
                onChange={(e) => setConfig({...config, atcPrimeMult: parseFloat(e.target.value)})}
                className="w-full px-3 py-2 border rounded"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Non-Prime ATC Treatment Effect (multiplier)
              </label>
              <input
                type="number"
                step="0.01"
                value={config.atcNonprimeMult}
                onChange={(e) => setConfig({...config, atcNonprimeMult: parseFloat(e.target.value)})}
                className="w-full px-3 py-2 border rounded"
              />
            </div>
          </div>
        </div>

        {/* Primary Metrics */}
        <div className="mb-6">
          <h2 className="text-2xl font-bold mb-4">Primary Metrics</h2>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <MetricCard
              title="Overall Add-to-Cart"
              metric={metrics.atcOverall}
              rateA={simulateData.A.atcRate}
              rateB={simulateData.B.atcRate}
              icon={ShoppingCart}
            />
            <MetricCard
              title="Prime Add-to-Cart"
              metric={metrics.atcPrime}
              rateA={simulateData.A.atcPrimeRate}
              rateB={simulateData.B.atcPrimeRate}
              icon={Users}
            />
            <MetricCard
              title="Non-Prime Add-to-Cart"
              metric={metrics.atcNonprime}
              rateA={simulateData.A.atcNonprimeRate}
              rateB={simulateData.B.atcNonprimeRate}
              icon={Users}
            />
          </div>
        </div>

        {/* Guardrail Metrics */}
        <div className="mb-6">
          <h2 className="text-2xl font-bold mb-4">Guardrail Metrics</h2>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <MetricCard
              title="Overall Bounce Rate"
              metric={metrics.bounceOverall}
              rateA={simulateData.A.bounceRate}
              rateB={simulateData.B.bounceRate}
              inverse={true}
              icon={AlertCircle}
            />
            <MetricCard
              title="Non-Prime Bounce Rate"
              metric={metrics.bounceNonprime}
              rateA={simulateData.A.bounceNonprimeRate}
              rateB={simulateData.B.bounceNonprimeRate}
              inverse={true}
              icon={AlertCircle}
            />
          </div>
        </div>

        {/* Visualization */}
        <div className="bg-white p-6 rounded-lg shadow mb-6">
          <h2 className="text-xl font-bold mb-4">Add-to-Cart Rate by Segment</h2>
          <ResponsiveContainer width="100%" height={300}>
            <BarChart data={chartData}>
              <CartesianGrid strokeDasharray="3 3" />
              <XAxis dataKey="name" />
              <YAxis label={{ value: 'ATC Rate (%)', angle: -90, position: 'insideLeft' }} />
              <Tooltip />
              <Legend />
              <Bar dataKey="Control ATC" fill="#3b82f6" />
              <Bar dataKey="Treatment ATC" fill="#8b5cf6" />
            </BarChart>
          </ResponsiveContainer>
        </div>

        {/* Decision Summary */}
        <div className="bg-white p-6 rounded-lg shadow">
          <h2 className="text-xl font-bold mb-4">Decision Summary</h2>
          <div className="prose max-w-none">
            <p className="mb-2">
              <strong>Overall ATC:</strong> {(simulateData.A.atcRate * 100).toFixed(2)}% → {(simulateData.B.atcRate * 100).toFixed(2)}% 
              (lift: {(metrics.atcOverall.relLift * 100).toFixed(1)}%, 
              95% CI: [{(metrics.atcOverall.ciLow * 100).toFixed(2)}%, {(metrics.atcOverall.ciHigh * 100).toFixed(2)}%])
              {metrics.atcOverall.significant && <span className="text-green-600 font-bold ml-2">Significant ✓</span>}
            </p>
            <p className="mb-2">
              <strong>Non-Prime ATC:</strong> {(simulateData.A.atcNonprimeRate * 100).toFixed(2)}% → {(simulateData.B.atcNonprimeRate * 100).toFixed(2)}%
              (lift: {(metrics.atcNonprime.relLift * 100).toFixed(1)}%)
              {metrics.atcNonprime.significant && metrics.atcNonprime.diff < 0 && 
                <span className="text-red-600 font-bold ml-2">Significant degradation ⚠</span>}
            </p>
            <p className="mb-4">
              <strong>Non-Prime Bounce:</strong> {(simulateData.A.bounceNonprimeRate * 100).toFixed(2)}% → {(simulateData.B.bounceNonprimeRate * 100).toFixed(2)}%
              (change: {metrics.bounceNonprime.diff >= 0 ? '+' : ''}{(metrics.bounceNonprime.diff * 100).toFixed(2)}pp)
            </p>
            
            <div className="bg-blue-50 border-l-4 border-blue-500 p-4">
              <p className="font-semibold text-blue-900">Recommendation:</p>
              <p className="text-blue-800 text-sm mt-2">
                {metrics.atcOverall.significant && metrics.atcOverall.diff > 0 ?
                  (metrics.atcNonprime.significant && metrics.atcNonprime.relLift < -0.05 ?
                    "⚠ Consider targeted rollout to Prime users only. Non-Prime segment shows meaningful degradation (>5% relative decline)." :
                    (metrics.bounceNonprime.significant && metrics.bounceNonprime.diff > 0.02 ?
                      "⚠ Monitor non-Prime bounce rate closely. Consider A/A' test with softer Prime messaging. Overall positive but guardrail concerns." :
                      "✓ Ship this treatment. Overall ATC improved significantly. Non-Prime impact is minimal and acceptable.")) :
                  (metrics.atcOverall.diff > 0 ?
                    "→ Positive trend but not statistically significant. Consider extending test duration for conclusive results." :
                    "✗ Do not ship. Treatment shows no improvement or negative impact on primary metric.")}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default ABTestAnalyzer;
